# -------------------------------------------------
# App Metadata
# -------------------------------------------------
APP_NAME=AI Knowledge Agent
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered semantic search + RAG with GPT-OSS (Ollama) + Qdrant

# -------------------------------------------------
# Ollama Config
# -------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_EMBEDDINGS_MODEL=nomic-embed-text   # ✅ fixed (was missing / overwritten)

# -------------------------------------------------
# Qdrant Config
# -------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=knowledge_base
QDRANT_VECTOR_SIZE=768
QDRANT_DISTANCE=COSINE
SEARCH_MODE=hybrid # Online,hybrid,semantic

# HNSW index tuning
QDRANT_HNSW_M=32
QDRANT_HNSW_EF_CONSTRUCT=128
QDRANT_FULL_SCAN_THRESHOLD=10000   # ✅ required field

# -------------------------------------------------
# Search tuning
# -------------------------------------------------
TOP_K=8
MIN_CHUNKS=3
MIN_RELEVANCE=0.6

# -------------------------------------------------
# Batching
# -------------------------------------------------
EMBEDDINGS_BATCH_SIZE=64
QDRANT_UPSERT_BATCH_SIZE=128

# -------------------------------------------------
# Debug & Logging
# -------------------------------------------------
DEBUG=false

# -------------------------------------------------
# Web Mode
# -------------------------------------------------
WEB_FETCH_FULL=false
WEB_MAX_RESULTS=6
